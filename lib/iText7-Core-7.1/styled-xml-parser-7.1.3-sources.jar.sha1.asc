<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:p="http://primefaces.org/ui"
      xmlns:f="http://xmlns.jcp.org/jsf/core">
    <h:head>
        <title>Escola</title>
     <style>
            div.botao {
      margin-left: 380px;
    }
    
    div.botaocadastros {
        margin-left: 490px;
    }
        
    body {
         background-color: #3cb371;
    }
    
    div.cadastro {
        margin-top: 10px;
        margin: 0px 0px 0px 50px;
         
        
    }
    
    .ocupada .ui-panel-titlebar {
    background: #3cb371;
    color: #000000;
    text-align: center;
    font-size: 20px;
}
        </style>
    </h:head>
    <h:body>
        <h:form id="formPermissoes">  
            <p:messages autoUpdate="true"/>
 
            <p:panel id="panel" header="Cadastro de Escola" styleClass="ocupada"> 
               <div class="cor_painel">
               <div class="cadastro">
           <h:panelGrid columns="6" cellpadding="5">  
            <h:outputLabel value="Nome da Escola:" />
            <h:inputText value="#{escolaJSFManagedBean.nome_escola}" size="30" />
            <h:outputLabel value="Logradouro:" />
            <h:selectOneMenu id="endereco_escolas" value="#{escolaJSFManagedBean.rua_escola}">
            <f:selectItem itemLabel="-- Selecione --" />
            <f:selectItems id="endereco_escola" value="#{escolaJSFManagedBean.nome_das_ruas}" />
            </h:selectOneMenu>
             <h:outputLabel for="id_lb" value="Numero :" />
             <p:spinner id="spinner_numero_escola" value="#{escolaJSFManagedBean.numero_escola}" min="1" size="7" stepFactor="1" />
            </h:panelGrid>
            </div>
            <br/>
             <br/>
        <div class="botao">  
            <p:commandButton id="cadastrar" value="CADASTRAR" action="#{escolaJSFManagedBean.cadastrarEscola()}" 
                             style=" background-color: #00ff00">
            <p:resetInput target="panel" />
            </p:commandButton>
            <p:commandButton id="buscar" value="BUSCAR" action="#{escolaJSFManagedBean.buscarEscola()}" 
                             style=" background-color: #00ff00">
            <p:resetInput target="panel" />
            </p:commandButton>
            <p:commandButton id="atualizar" value="ATUALIZAR" action="#{escolaJSFManagedBean.atualizarEscola()}" 
                             style=" background-color: #00ff00" ajax="false">
            <p:resetInput target="panel" />
            </p:commandButton>
            <!--<p:commandButton id="excluir" value="EXCLUIR" action="" 
                             style=" background-color: #00ff00" ajax="false">
            <p:resetInput target="panel" />
            </p:commandButton>-->
        </div> 
            
               </div>
         </p:panel> 
        </h:form>
    </h:body>
</html>



